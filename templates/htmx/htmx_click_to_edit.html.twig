<div id="htmx-user-edit">
  {{ form_start(form) }}

  <div>
    <label for="username" class="sr-only">Username</label>
    <div class="relative">
      {{ form_widget(form.username) }}
    </div>
  </div>
  <div>
    <label for="firstname" class="sr-only">Firstname</label>
    <div class="relative">
      {{ form_widget(form.firstname) }}
    </div>
  </div>
  <div>
    <label for="lastname" class="sr-only">Lastname</label>
    <div class="relative">
      {{ form_widget(form.lastname) }}
    </div>
  </div>
  <div>
    <label for="email" class="sr-only">Email</label>
    <div class="relative">
      {{ form_widget(form.email) }}
    </div>
  </div>
  <div class="flex items-center justify-between">
    <p class="text-sm text-gray-500"></p>
    <button hx-target="#htmx-user-edit" hx-post="{{ path('htmx_user_show', {id: user.id}) }}" type="submit" class="ml-3 inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium text-white">
      Test
    </button>
    {{ form_widget(form.submit) }}
    <button hx-target="#htmx-user-edit" hx-get="{{ path('htmx_user_show', {id: user.id}) }}" type="cancel" class="ml-3 inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium text-white">
      Cancel
    </button>
  </div>
  {{ form_end(form) }}
</div>
