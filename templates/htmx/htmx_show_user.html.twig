<div id="htmx-user-edit" hx-swap="outerHTML">
  <form class="mx-auto mt-8 mb-0 max-w-md space-y-4">
    <div>
      <label for="username" class="sr-only">Username</label>
      <div class="relative">
        <input disabled type="text" id="username" name="username" required="required" placeholder="Username" class="w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm" value="{{ user.username }}">

      </div>
    </div>
    <div>
      <label for="firstname" class="sr-only">Firstname</label>
      <div class="relative">
        <input disabled type="text" id="firstname" name="firstname" required="required" placeholder="Firstname" class="w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm" value="{{ user.firstname }}">

      </div>
    </div>
    <div>
      <label for="lastname" class="sr-only">Lastname</label>
      <div class="relative">
        <input disabled type="text" id="lastname" name="lastname" required="required" placeholder="Lastname" class="w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm" value="{{ user.lastname }}">

      </div>
    </div>
    <div>
      <label for="email" class="sr-only">Email</label>
      <div class="relative">
        <input disabled type="email" id="email" name="email" required="required" placeholder="Email" class="w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm" value="{{ user.email }}">

      </div>
    </div>
    <div class="flex items-center justify-between">
      <p class="text-sm text-gray-500"></p>
      <button hx-target="#htmx-user-edit" hx-get="{{ path('htmx_user_edit', {id: user.id}) }}" hx-swap="outerHTML" class="ml-3 inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium text-white">
        Click To Edit
      </button>
    </div>
  </form>
</div>
